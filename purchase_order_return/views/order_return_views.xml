<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Inherit Form View to Modify it order return-->
        <record id="view_inherit_order_return_form" model="ir.ui.view">
            <field name="name">view.inherit.order.return.form</field>
            <field name="model">order.return</field>
            <field name="inherit_id" ref="order_return.view_order_return_form"/>
            <field name="arch" type="xml">

                <!--                <xpath expr="//button[@name='action_cancel_return']" position="attributes">-->
                <!--                    <attribute name="groups">purchase.group_purchase_manager</attribute>-->
                <!--                </xpath>-->

                <xpath expr="//header" position="inside">
                    <field name="inv_created" invisible="1"/>
                    <button name="action_reverse_po" string="Add Credit Note"
                            type="object" class="btn-primary"
                            invisible="(move_count != 0) or (state != 'done') or (return_type != 'purchase')"
                    />
                </xpath>


                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="purchase_id" domain="[('state', '=', 'purchase')]"
                        invisible="return_type == 'sale'" required="return_type != 'sale'" readonly="state not in ('draft')"/>
                </xpath>

                <xpath expr="//field[@name='picking_id']" position="after">
                    <field name="purchase_picking_id" domain="[('state', '=', 'done'),('picking_type_code', '=',
                        'incoming'),('purchase_id', '=', purchase_id)]"
                        invisible="return_type != 'purchase'" required="return_type != 'sale'"  readonly="state not in ('draft')"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>