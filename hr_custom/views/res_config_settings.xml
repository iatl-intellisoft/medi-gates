<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_res_config_settings_form_inherit" model="ir.ui.view">
            <field name="name">view.res.config.settings.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//block[@name='employee_rights_setting_container']" position="after">
                       <block title="Hr Report Templates" id="hr_template">
                       </block>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
