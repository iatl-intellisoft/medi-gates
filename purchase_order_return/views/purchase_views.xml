<odoo>
    <data>

        <record id="action_purchase_order_return_view" model="ir.actions.act_window">
            <field name="name">Order Return</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">order.return</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'default_return_type': 'purchase'}</field>
            <field name="domain">[('return_type','=','purchase')]</field>
        </record>

        <!-- Inherit Form View to Modify it Purchase-->
        <record id="view_inherit_purchase_order_form" model="ir.ui.view">
            <field name="name">view.inherit.purchase.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_rfq_send']" position="before">
                    <button name="%(order_return.action_order_return_picking)d" string="Return Request"
                            invisible="delivery_done != True" type="action"
                            class="oe_highlight"/>
                    <field name="delivery_done" invisible="1"/>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_open_order_return"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-exchange"
                            invisible="purchase_count == 0">
                        <field name="purchase_count" string="Order Return" widget="statinfo"/>
                    </button>
                </xpath>

                <xpath expr="//field[@name='order_line']/list/field[@name='qty_received']" position="after">
                    <field name="qty_return"
                        column_invisible="parent.state not in ('purchase', 'done')"/>
                </xpath>
            </field>
        </record>

        <menuitem id="menu_order_return_view"
                  name="Purchase Return"
                  parent="purchase.menu_procurement_management"
                  action="action_purchase_order_return_view"
                  sequence="10"/>

    </data>
</odoo>