<odoo>
    <template id="report_stock_move_incoming_template">
        <t t-call="web.html_container">
            <h2>Incoming Stock Move Report</h2>
            <table class="table table-sm table-bordered" style="width:100%; margin-top: 10px;">
                <thead>
                    <tr>
                        <th>Purchase Ref</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price Unit</th>
                        <th>Currency</th>
                        <th>Stock Out Ref</th>
                        <th>Destination</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="docs" t-as="line">
                        <tr>
                            <td><t t-esc="line['purchase_ref']"/></td>
                            <td><t t-esc="line['product_name']"/></td>
                            <td class="text-right"><t t-esc="line['qty']"/></td>
                            <td class="text-right"><t t-esc="line['price_unit']"/></td>
                            <td><t t-esc="line['currency']"/></td>
                            <td><t t-esc="line['stock_out_ref']"/></td>
                            <td><t t-esc="line['location_dest']"/></td>
                            <td><t t-esc="line['state']"/></td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>




     <record id="action_report_stock_move_incoming" model="ir.actions.report">
                <field name="name">Incoming Stock Move Report</field>
                <field name="model">stock.move</field>
                <field name="report_type">qweb-pdf</field>
                <field name="report_name">order_return.report_stock_move_incoming_template</field>
                <field name="report_file">order_return.report_stock_move_incoming_template</field>
                <field name="binding_model_id" ref="model_stock_move"/>
                <field name="binding_type">report</field>
        </record>

    <!-- Optional menu item to trigger report manually -->
    <menuitem id="menu_incoming_stock_move_report"
              name="Incoming Stock Move Report"
              parent="purchase.purchase_report_main"
              action="action_report_stock_move_incoming"/>
</odoo>
