    <!-- ==================== ACTION ==================== -->
    <record id="action_stock_move_incoming_list" model="ir.actions.act_window">
        <field name="name">Moves Analysis</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_stock_move_incoming_list"/>
        <field name="search_view_id" ref="stock.view_move_search"/>
        <!-- <field name="domain">[('picking_type_code','=','incoming')]</field> -->
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No incoming stock moves found.
            </p>
            <p>
                This view shows all incoming stock moves with purchase reference, product, quantity, price, currency, origin, destination, and state.
            </p>
        </field>
    </record>

  

    <!-- ==================== MENU ITEM ==================== -->
