<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--Loan list-->
		<record id="list_hr_loan_view" model="ir.ui.view">
			<field name="name">hr.loan.list</field>
			<field name="model">hr.loan</field>
			<field name="arch" type="xml">
				<list string="Loan Requests">
					<field name="name"/>
					<field name="employee_id"/>
					<field name="loan_amount"/>
					<field name="date"/>
					<field name="state"/>
				</list>
			</field>
		</record>

		<!-- Shortcuts -->
		<record id="act_hr_loan_request" model="ir.actions.act_window">
			<field name="name">Loans</field>
			<field name="res_model">account.move.line</field>
			<field name="view_mode">list,form</field>
			<field name="context">{'search_default_loan_id': [active_id], 'default_loan_id': active_id}</field>
			<field name="domain">[('loan_id','=',active_id)]</field>
		</record>
		<!--Loan Form-->
		<record id="view_hr_loan_form" model="ir.ui.view">
			<field name="name">hr.loan.form</field>
			<field name="model">hr.loan</field>
			<field name="arch" type="xml">
				<form string="Loan Request" >
					<header>

						<button name="action_approve" type="object" string="General Manager Approve" class="oe_highlight" invisible="state != 'wait_finance'"/>
						<button name="action_submit" class="oe_highlight" type="object" string="Submit" invisible="state != 'confirm'"/>
						<button name="action_set_to_draft" type="object" string="Set To Draft"  invisible="state not in ('confirm', 'refuse', 'cancel')"  class="oe_highlight"/>
						<button name="action_confirm" type="object" class="oe_highlight" string="HR Confirm" invisible="state != 'draft'"/>

						<button name="action_refuse" type="object" string="Refuse" invisible="state != 'wait_finance'"/>
						<button name="action_cancel" type="object" string="Cancel" invisible="state != 'approve'" />
						<button name="action_set_to_draft" type="object" string="Set To Draft" invisible="state != 'approve'" class="oe_highlight"/>

						<field name="state" widget="statusbar" />

						<button type="object" name="compute_loan_line" string="Compute" icon="fa-repeat" colspan="2" invisible="state == 'approve'"/>
						<button type="object" name="action_set_to_draft" string="Set Draft" icon="fa-repeat" invisible="state != 'cancel'" class="oe_highlight"/>

								<div class="oe_inline"/>
					</header>
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only"/>
							<h1>
								<field name="name" class="oe_inline"/>
							</h1>
						</div>
						<group col="2">
						<group>
							<field name="employee_id" on_change="onchange_employee_id(employee_id)"  readonly="state != 'draft'"/>
							<field name="date" readonly="state != 'draft'"/>
							<field name="job_id" readonly='1'/>
							<field name="department_id" readonly='1'/>
							<field name="emp_salary" readonly='1'/>

						</group>
						<group>
						<field name="loan_type" readonly="state != 'draft'"/>
						<field name="currency_id"/>
						<field name="loan_type_usd_loan" invisible="True"/>
						<field name="loan_type_code" invisible="True"/>
						<field name="amount_requested" invisible="loan_type_code != 'EML'" required="loan_type_code == 'EML'" readonly="state != 'draft'"/>
						<field name="loan_amount" readonly="state != 'draft'"/>
						<field name="no_month" readonly="state != 'draft'" required='1'/>
						<field name="payment_start_date" readonly="state != 'draft'"/>
						<field name="reason" required="need_reason == True"/>
                        <field name="need_reason" invisible="True"/>
						</group>
						</group>
						
						<notebook>
							<page string="Installments">
								
								<field name="loan_line_ids" readonly="state != 'draft'">
									<list string="Loan Line" editable="top">
										<field name="paid_date" readonly="paid == True"/>
										<field name="paid_amount" readonly="paid == True"/>
										<field name="paid"/>
										<field name="notes" readonly="paid == True"/>
										<button name='postpone_month' string='postpone' type='object'/>
									</list>

								</field>
								<group class="oe_subtotal_footer oe_right">
									<field name="total_loan" invisible="1"/>
									<field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
									<div>
										<label for="total_paid_amount"/>
										<button name="button_reset_balance_total"  invisible="state != 'draft'" string="(update)" class="oe_link oe_edit_only" type="object" help="Recompute Balance"/>
									</div>
									<field name="total_paid_amount" nolabel="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
									<field name="balance_amount" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
								</group>
								
							</page>

							<page string='Loan Request Template' groups="base.group_no_one">
							<!-- <page string='Loan Request Template'> -->
								<field name='loan_request_website_description'/>
							</page>

							<page string='Salary Advance Report Template' groups="base.group_no_one">
							<!-- <page string='Salary Advance Report Template'> -->
								<field name='salary_advance_website_description'/>
							</page>

							<page string="Other Information">
							<group col="2">
							<field name="loan_old_amount" readonly="state != 'draft'"/>
							<!--field name="max_loan"/-->
							<field name="voucher_id" readonly="state != 'draft'"/>
						</group>
							</page>

						</notebook>
					</sheet>
					 <chatter/>
				</form>
			</field>
		</record>
		<!--loan menu-->
		<menuitem name="Loans Request" parent="hr_custom.menu_hr_employee_process" id="menu_hr_loans" sequence="20" groups="base.group_user"/>
            <!-- pivot view of loan request      -->
        <record id="loan_request_view_pivot" model="ir.ui.view">
			<field name="name">loan.request.pivot</field>
			<field name="model">hr.loan</field>
			<field name="arch" type="xml">
				<pivot string="loan Analysis Report">
					<field name="employee_id" type="row"/>
					<field name="department_id" type="col"/>
					<field name="state" type="col"/>
					<field name="loan_amount" type="measure"/>
				</pivot>
			</field>
		</record>

       			<!-- pivot view of loan request      -->
        <record id="loan_view_pivot" model="ir.ui.view">
			<field name="name">loan.pivot</field>
			<field name="model">hr.loan.line</field>
			<field name="arch" type="xml">
				<pivot string="loan Analysis Report">
					<field name="paid_date" type="col"/>
					<field name="paid_amount" type="measure"/>
				</pivot>
			</field>
		</record>

<!--		search view of lon request-->
		<record id="view_hr_loan_search" model="ir.ui.view">
			<field name="name">view.hr.loan.search</field>
			<field name="model">hr.loan</field>
			<field name="arch" type="xml">
				<search>
					<field name="employee_id" string="employee"/>
					<field name="department_id" string="department"/>
					<field name="state" string="status"/>
                    <field name="loan_type" string="loan type"/>
				    <field name="date" string=" Date Request"/>

					<group expand="0" string="Group By">
						<filter name="group_name" string="department" context="{'group_by':'department_id'}"/>
						<filter name="group_employee" string="Employee" context="{'group_by':'employee_id'}"/>
						<filter name="group_loan_type" string="Loan Type" context="{'group_by':'loan_type'}"/>
						<filter name="group_state" string="status" context="{'group_by':'state'}"/>

					</group>
				</search>
			</field>
		</record>

		<record id="action_hr_loan_request" model="ir.actions.act_window">
			<field name="name">Loan Requests</field>
			<field name="res_model">hr.loan</field>
			<field name="view_mode">list,form,pivot</field>
		</record>
		<menuitem name="Loan Requests" parent="menu_hr_loans" id="menu_hr_loan_request" action="action_hr_loan_request" groups="base.group_user"/>
		<!-->loan batches list view <-->
		<record id="list_hr_loan_line_view" model="ir.ui.view">
			<field name="name">hr.loa.line.list</field>
			<field name="model">hr.loan.line</field>
			<field name="arch" type="xml">
				<list string="Loan Requests" create='0'>
					<field name="employee_id"/>
					<field name="paid_date"/>
					<field name="paid_amount"/>
					<field name="payslip_id"/>
					<field name="loan_id"/>
					<field name="paid"/>
				</list>
			</field>
		</record>

		<record id="view_hr_loan__line_form" model="ir.ui.view">
			<field name="name">hr.loan.line.form</field>
			<field name="model">hr.loan.line</field>
			<field name="arch" type="xml">
				<form string="Loan Details" create='0'>
					<header>
						<button name="action_paid_amount" type="object" string="MARK AS PAID" invisible="paid == True"/>

						<button name="postpone_month" type="object" string="Postpone" />

					</header>
					<sheet>

						<div class="oe_title">
                        <label for="employee_id" class="oe_edit_only"/>
                        <h2>
                            <field name="employee_id" class="oe_inline" readonly='1'/>
                        </h2>
                    </div>
						<group col="4">
							<field name="paid_date" readonly='1'/>
							<field name="paid_amount" readonly='1'/>
							<field name="loan_id" readonly='1'/>
							<field name="payslip_id" readonly='1'/>
							<field name="paid" readonly='1'/>
						</group>
						<notebook>
							<page string="Note">
								<field name="notes"  readonly="paid == True"/>
							</page>
						</notebook>
					</sheet>
					 <chatter/>
				</form>
			</field>
		</record>

		<record id="view_hr_loan_line_search" model="ir.ui.view">
			<field name="name">view.hr.loan.line.search</field>
			<field name="model">hr.loan.line</field>
			<field name="arch" type="xml">
				<search>
					<filter name="paid" domain="[('paid','=',True)]" string="Paid Loans"/>
					<filter name="unpaid" domain="[('paid','=',False)]" string="Un Paid Loans"/>

					<field name="loan_type" string="Loan type"/>

					<group expand="0" string="Group By">
						<filter name="group_name" string="Due Date" context="{'group_by':'paid_date'}"/>
						<filter name="group_employee" string="Employee" context="{'group_by':'employee_id'}"/>
						<filter name="group_loan_type" string="Loan Type" context="{'group_by':'loan_type'}"/>
						<filter name="paid" string="Paid" context="{'group_by':'paid'}" domain="[('paid','=',True)]"/>
						<filter name="paid" string="Not Paid" context="{'group_by':'paid'}" domain="[('paid','=',False)]"/>
					</group>
				</search>
			</field>
		</record>

		<record id="action_hr_loan_line" model="ir.actions.act_window">
			<field name="name">Loan Details</field>
			<field name="res_model">hr.loan.line</field>
			<field name="view_mode">list,form,pivot</field>
			<field name="search_view_id" ref="view_hr_loan_line_search"/>
		</record>
		<menuitem name="Loans Details" parent="menu_hr_loans" id="menu_hr_loan_batches" action="action_hr_loan_line" groups="hr.group_hr_manager"/>
