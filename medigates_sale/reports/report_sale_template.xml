<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <template id="report_sale_invoice_report2_pdf">
        <t t-call="web.basic_layout">
            <div class="page">
                <h2>Sales Invoice Financial Report</h2>
                <table class="table table-sm table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Warehouse</th>
                            <th>City</th>
                            <th>Invoice</th>
                            <th>Invoice Date</th>
                            <th>Invoice Amount</th>
                            <th>Payment Term</th>
                            <th>Payment Value</th>
                            <th>Total Due</th>
                            <th>Overdue</th>
                            <th>Not Past Due</th>
                            <th>Commitment %</th>
                            <th>Sale Order</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="r">
                            <tr>
                                <td><t t-esc="r.partner_id.name"/></td>
                                <td><t t-esc="r.warehouse_id.name"/></td>
                                <td><t t-esc="r.city"/></td>
                                <td><t t-esc="r.invoice_id.name"/></td>
                                <td><t t-esc="r.invoice_date"/></td>
                                <td><t t-esc="r.invoice_amount"/></td>
                                <td><t t-esc="r.payment_term.name"/></td>
                                <td><t t-esc="r.payment_value"/></td>
                                <td><t t-esc="r.total_due"/></td>
                                <td><t t-esc="r.overdue_value"/></td>
                                <td><t t-esc="r.not_past_due"/></td>
                                <td><t t-esc="r.commitment_rate"/>%</td>
                                <td><t t-esc="r.sale_order_name"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

