<odoo>

    <record id="view_hr_deduction_batch_form" model="ir.ui.view">
        <field name="name">hr.deduction.batch.form</field>
        <field name="model">hr.deduction.batch</field>
        <field name="arch" type="xml">
            <form string="Deduction">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" invisible="state != 'draft'" class="oe_highlight"/>
                    <button type="object" name="compute_deduction" string="Compute" icon="fa-calculator" colspan="2"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" type="object" string="Approve" invisible="state != 'confirm'" class="oe_highlight"/>
                    <button name="action_refuse" type="object" string="Refuse" invisible="state != 'confirm'" class="oe_highlight"/>
                    <button name="action_set_to_draft" type="object" string="Set To Draft"
                            invisible="state not in ('confirm', 'refuse', 'cancel')"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state != 'approve'" groups="hr_custom.group_hr_cancel"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                    </div>
                    <group col="2">
                        <group>
                            <field name="batch_type" readonly="state != 'draft'" required="1" />
                            <field name="employee_id" invisible="batch_type != 'employee'" readonly="state != 'draft'" required="batch_type == 'employee'"/>
                            <field name="employee_ids" invisible="batch_type != 'selected_employee'" readonly="state != 'draft'" required="batch_type == 'selected_employee'"
                                   widget="many2many_tags"/>
                            <field name="type_id" readonly="state != 'draft'"/>
                            <field name="deducted_by" widget="radio" invisible="1"/>
                            <field name="amount" readonly="state != 'draft'"  required="deducted_by != 'hours'" invisible="deducted_by == 'hours'"/>
                            <field name="hours_ded" readonly="state != 'draft'"  required="deducted_by == 'hours'" invisible="deducted_by != 'hours'"/>

                            <label for="date" string="Period"/>
                                    <div clas="o_row" colspan="2">
                                        <field name="start_date" class="oe_inline" widget="daterange"  readonly="state != 'draft'" required="1"  options="{'related_end_date': 'end_date'}"/> TO
                                        <field name="end_date" class="oe_inline" widget="daterange"  readonly="state != 'draft'" required="1"  options="{'related_start_date': 'start_date'}"/>
                                    </div>

                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'" required="1" />
                            <field name="approve_date" readonly="1"/>
                              <field name="company_id" readonly="state != 'draft'" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Deductions">
                            <group>
                                <field name="dedcution_ids" nolabel="1" readonly="1">
                                    <list editable="bottom">
                                        <field name="date"/>
                                        <field name="employee_id"/>
                                        <field name="type_id"/>
                                        <field name="deducted_by" widget="radio"/>
                                        <field name="amount" required="deducted_by != 'hours'" invisible="deducted_by != 'amount'"/>
                                        <field name="hours_ded" required="deducted_by == 'hours'" invisible="deducted_by != 'hours'"/>
                                        <field name="company_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </list>
                                </field>
                            </group>
                        </page>

                        <page string="Deduction Template" groups="base.group_no_one">
                            <group>
                                <field name="deduction_website_description" nolabel="1"/>
                            </group>
                        </page>

                        <page string="Reason">
                            <group>
                                <field name="description" colspan="4" nolabel="1"
                                    readonly="state != 'draft'"  required="1"/>
                            </group>
                        </page>

                    </notebook>
                </sheet>
               <chatter/>
            </form>
        </field>
    </record>

    <record id="view_hr_deduction_batch_tree" model="ir.ui.view">
        <field name="name">hr.deduction.tree</field>
        <field name="model">hr.deduction.batch</field>
        <field name="arch" type="xml">
            <list string="Deduction Batch ">
                <field name="name"/>
                <field name="date"/>
                <field name="type_id"/>
                <field name="batch_type"/>
                <field name="state"/>

            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_hr_deduction_batch">
        <field name="name">Deduction Batch</field>
        <field name="res_model">hr.deduction.batch</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_hr_deduction_batch_tree"/>
    </record>

    <menuitem
            id="menu_hr_deduction_batch"
            parent="menu_hr_deduction"
            action="action_hr_deduction_batch"
            sequence="2"
            groups="hr.group_hr_manager"/>

</odoo>