<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="view_inherit_order_return_picking_form_abuelf" model="ir.ui.view">
            <field name="name">view.inherit.order.return.picking.form</field>
            <field name="model">order.return.picking</field>
            <field name="inherit_id" ref="order_return.view_order_return_picking_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='picking_id']" position="after">
                    <field name="is_purchase" invisible="1"/>
                    <field name="purchase_picking_id" domain="[('state', '=', 'done'),('picking_type_code', '=',
                        'incoming'),('purchase_id', '=', purchase_id)]" invisible="is_purchase != True"
                        groups="base.group_user" />

                    
                </xpath>

                 <xpath expr="//field[@name='product_return_moves']/list/field[@name='product_id']" position="before">
                    <field name="purchase_line_id" column_invisible="1"/>
                </xpath>
<!--                -->
<!--                <xpath expr="//field[@name='picking_id']" position="attributes">-->
<!--                    <attribute name="domain">[('state', '=', 'done'),('picking_type_code', '=',-->
<!--                        'incoming'),('purchase_id', '=', active_id)]-->
<!--                    </attribute>-->
<!--                </xpath>-->
            </field>
        </record>


    </data>
</odoo>