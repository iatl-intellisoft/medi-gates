<odoo>

      <!-- ==================== TREE VIEW ==================== -->
    <record id="view_stock_move_incoming_tree" model="ir.ui.view">
        <field name="name">stock.move.incoming.tree</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <list>
                <field name="purchase_ref"/>
                <field name="product_id" string="Product"/>
                <field name="product_uom_qty" string="Quantity"/>
                <field name="price_unit" string="Price Unit"/>
                <field name="currency_id" string="Currency"/>
                <field name="stock_out_ref" string="Stock Out Ref"/>
                <field name="location_dest_id" string="Destination"/>
                <field name="state" string="Status"/>
            </list>
        </field>
    </record>

    <!-- ==================== SEARCH VIEW ==================== -->
    <record id="view_stock_move_incoming_search" model="ir.ui.view">
        <field name="name">stock.move.incoming.search</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">
            <search>
                <field name="purchase_ref"/>
                <field name="product_id"/>
                <field name="currency_id"/>
                <field name="location_dest_id"/>
                <filter string="Incoming" name="incoming_filter" domain="[('picking_type_code','=','incoming')]"/>
                <filter string="Done" name="done_filter" domain="[('state','=','done')]"/>
            </search>
        </field>
    </record>
    <!-- ==================== ACTION ==================== -->
    <record id="action_stock_move_incoming_tree" model="ir.actions.act_window">
        <field name="name">Incoming Product Moves</field>
        <field name="res_model">stock.move</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_stock_move_incoming_tree"/>
        <field name="search_view_id" ref="view_stock_move_incoming_search"/>
        <field name="domain">[('picking_type_code','=','incoming')]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No incoming stock moves found.
            </p>
            <p>
                This view shows all incoming stock moves with purchase reference, product, quantity, price, currency, origin, destination, and state.
            </p>
        </field>
    </record>

  

    <!-- ==================== MENU ITEM ==================== -->
    <menuitem id="menu_stock_move_incoming_tree"
              name="Incoming Product Moves"
              parent="purchase.menu_purchase_root"
              action="action_stock_move_incoming_tree"
              sequence="40"/>
</odoo>
