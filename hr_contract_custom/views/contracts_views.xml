<odoo>
    <data>
        <!-- Inherit Form View to Modify  Employee Contract Form-->
        <record id="view_hr_contract_view_form_inherit" model="ir.ui.view">
            <field name="name">hr_contract_view_form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//field[@name='wage']"  position="attributes">
   10:                     <attribute name="invisible">employee_grade not in ('m2','p1')</attribute>
                  </xpath>
                <xpath expr="//group[@name='salary']" position="before">
                    <group name="salary">
                        <field name='employee_grade' required="1"/>
                        <label for="usd_salary" invisible="employee_grade not in ('m2','p1')"/>
                        <div class="o_row mw-50" name="usd_salary" invisible="employee_grade not in ('m2','p1')">
                            <field name="usd_salary" class="oe_inline o_hr_narrow_field" invisible="employee_grade not in ('m2','p1')" nolabel="1"/>
                            <div class="mb-3" name="wage_period_label" invisible="employee_grade not in ('m2','p1')"> <field name='currency_id_usd' invisible="employee_grade not in ('m2','p1')"/></div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
