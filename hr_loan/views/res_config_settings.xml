<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_res_config_settings_form_inherit_custome" model="ir.ui.view">
            <field name="name">view.res.config.settings.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_custom.view_res_config_settings_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='hr_template']" position="inside">
                    <setting string="Loan Request Template">
                        <div class="text-muted">
                            Choose your Template
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <label for="loan_request_template_id" string="Template"
                                       class="col-3 col-lg-3 o_light_label"/>
                                <field name="loan_request_template_id" class="oe_inline"/>
                            </div>
                        </div>
                    </setting>
                    <setting string="Salary Advance Template">
                        <div class="text-muted">
                            Choose your Template
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <label for="salary_advance_template_id" string="Template"
                                       class="col-3 col-lg-3 o_light_label"/>
                                <field name="salary_advance_template_id" class="oe_inline"/>
                            </div>
                        </div>
                    </setting>
                     <setting string="Long-term loan">
                        <div class="text-muted">
                            <field name="maximum_loan_Long_term" required="1"/>
                        </div>
                    </setting>
                    <setting string="hort-term loan">
                        <div class="text-muted">
                            <field name="maximum_loan_hort_term" required="1"/>
                        </div>
                    </setting>
                </xpath>
