<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Loan payments list-->
        <record id="list_payment_loan_view" model="ir.ui.view">
            <field name="name">loan.payment.list</field>
            <field name="model">loan.payment</field>
            <field name="arch" type="xml">
                <list string="Loan Payments">
                    <field name="employee_id"/>
                    <field name="loan_id"/>
                </list>
            </field>
        </record>
        <!--Loan payments Form-->

        <record id="hr_payment_loan_form_view" model="ir.ui.view">
            <field name="name">loan.payment.form</field>
            <field name="model">loan.payment</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_confirmed" type="object" string="Confirm" class="oe_highlight"  invisible="state != 'draft'"/>
                        <button name="action_approve" type="object" string="Approve" class="oe_highlight" invisible="state != 'confirmed'"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state != 'confirmed'"/>

                        <field name="state" widget="statusbar"/>

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="reference" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group col="2">
                            <group>
                                <field name="employee_id" required="1" options="{'no_create_edit': True}"  readonly="state != 'draft'"/>
                                <field name="loan_id" required="1" options="{'no_create_edit': True}"  readonly="state != 'draft'"/>
                                <field name="amount" readonly="1"/>
                            </group>
                            <group>
                                <field name="date" readonly="1"/>
                                <field name="voucher_id" invisible="voucher_id == False" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Installments">
                                <field name="loan_line_ids" required="1"  readonly="state != 'draft'">
                                    <list editable="bottom">
                                        <field name="paid_date"/>
                                        <field name="paid_amount"/>
                                        <field name="paid"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="action_hr_loan_payments1" model="ir.actions.act_window">
            <field name="name">Loan Payment</field>
            <field name="res_model">loan.payment</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem name="Loans Payments" parent="menu_hr_loans" id="menu_hr_loan_payments1" action="action_hr_loan_payments1"
                  groups="hr.group_hr_manager"/>
    </data>
</odoo>
