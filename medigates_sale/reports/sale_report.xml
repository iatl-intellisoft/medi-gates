    <record id="sale.action_order_report_salesperson" model="ir.actions.act_window">
        <field name="name">Sales Analysis By Salespersons</field>
        <field name="res_model">sale.report</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="view_id" ref="sale_salespersons_report_view_tree"/>
        <field name="search_view_id" ref="sale.view_order_product_search"/>
        <field name="context">{'search_default_User': 1, 'group_by': 'user_id', 'search_default_filter_order_date': 1}</field>
        <field name="help">This report performs analysis on your quotations and sales orders. Analysis check your sales revenues and sort it by different group criteria (salesman, partner, product, etc.) Use this report to perform analysis on sales not having invoiced yet. If you want to analyse your turnover, you should use the Invoice Analysis report in the Accounting application.</field>
    </record>


<record id="view_sale_invoice_report_list20" model="ir.ui.view">
    <field name="name">sale.invoice.report.list</field>
    <field name="model">sale.invoice.report2</field>
    <field name="arch" type="xml">
        <list string="Sales Invoice Report" create="false" delete="false">
            <field name="sale_order_name"/>
            <field name="partner_id"/>
            <field name="warehouse_id"/>
            <field name="city"/>
            <field name="invoice_id"/>
            <field name="invoice_date"/>
            <field name="invoice_amount"/>
            <field name="payment_term"/>
            <field name="payment_value"/>
            <field name="total_due"/>
            <field name="overdue_value"/>
            <field name="not_past_due"/>
            <field name="commitment_rate"/>
        </list>
    </field>
</record>

<record id="view_sale_invoice_report_search20" model="ir.ui.view">
    <field name="name">sale.invoice.report.search</field>
    <field name="model">sale.invoice.report2</field>
    <field name="arch" type="xml">
        <search string="Sales Invoice Report">
            <field name="partner_id"/>
            <field name="city"/>
            <field name="invoice_date"/>
        </search>
    </field>
</record>

<!-- Window Action -->
<record id="action_sale_invoice_report201" model="ir.actions.act_window">
    <field name="name">Sales Invoice Report</field>
    <field name="res_model">sale.invoice.report2</field>
    <field name="view_mode">list,search</field>
    <field name="view_id" ref="view_sale_invoice_report_list20"/>
    <field name="search_view_id" ref="view_sale_invoice_report_search20"/>
    <field name="domain">[('sale_order_name', '!=', False)]</field>
    <field name="help" type="html">
        <p>This report shows invoice-level financial data grouped by customer.</p>
    </field>
</record>

<!-- Menu Item -->
<menuitem id="menu_sale_invoice_report201"
          name="Sales Invoice Report"
          parent="sale.menu_sale_report"
          action="action_sale_invoice_report201"
          sequence="1"/>

