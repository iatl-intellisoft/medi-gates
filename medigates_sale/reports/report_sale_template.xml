  <template id="report_salesperson_pdf">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="line">
        <div class="page">
          <h2>Salesperson Report</h2>
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Order Date</th>
                <th>Order</th>
                <th>Product</th>
                <th>Salesperson</th>
                <th>Customer</th>
                <th>Customer City</th>
                <th>Salesperson</th>
                <th>Company</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><t t-esc="line.order_id.date_order"/></td>
                <td><t t-esc="line.order_id.name"/></td>
                <td><t t-esc="line.product_id.name"/></td>
                <td><t t-esc="line.order_id.partner_id.name"/></td>
                <td><t t-esc="line.order_id.partner_id.city or ''"/></td>
                <td><t t-esc="line.order_id.user_id.name or ''"/></td>
                <td><t t-esc="line.order_id.company_id.name or ''"/></td>
                <td><t t-esc="line.product_uom_qty"/></td>
                <td><t t-esc="line.price_unit"/></td>
                <td><t t-esc="line.price_total"/></td>
              </tr>
            </tbody>
          </table>
        </div>
      </t>
    </t>
  </template>
    
